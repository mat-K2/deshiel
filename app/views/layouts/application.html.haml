!!!
%html

  %head
    %title Deshiel
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          .brand
            %a{:href => root_path}
              Deshiel
              - if request.smart_phone?
                mobile
          - if user_signed_in?
            %ul.nav
              %li
                = link_to '自身の問題一覧', user_path(current_user, :type => "my_questions")
              %li
                = link_to '弟子の問題一覧（未解決）', user_path(current_user, :type => "pupil_questions")
              %li
                = link_to '弟子の問題一覧（解決済み）', user_path(current_user, :type => "answer_questions")
            %ul.nav.pull-right
              %li.dropdown
                %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
                  = current_user.email
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'ユーザ情報の編集', edit_user_path(current_user)
                  %li.divider
                  %li
                    = link_to 'ログアウト', destroy_user_session_path, :method => :delete

          - else
            %ul.nav.pull-right
              %li
                = link_to 'ログイン', new_user_session_path
    .container
      = yield