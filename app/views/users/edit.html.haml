%h2 ユーザ情報編集
= form_for @user, html: { class: 'form-horizontal' }, method: 'PUT' do |f|
  .form-group
    %label.col-sm-2.control-label{ for: 'user_name' }
      名前
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'user_description' }
      紹介文
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'user_master_genre' }
      得意分野
    .col-sm-10
      = f.select :master_genre, User::MASTER_GENRE_LIST
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit '更新する', class: 'btn btn-primary'
