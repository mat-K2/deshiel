%h2 新規登録

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
  = devise_error_messages!
  .form-group
    %label.col-sm-2.control-label{ for: 'user_name' }
      名前
    .col-sm-4
      = f.text_field :name, :autofocus => true, class: 'form-control'

  .form-group
    %label.col-sm-2.control-label{ for: 'user_email' }
      メールアドレス
    .col-sm-4
      = f.email_field :email, class: 'form-control'

  .form-group
    %label.col-sm-2.control-label{ for: 'user_password' }
      パスワード
    .col-sm-4
      = f.password_field :password, class: 'form-control'

  .form-group
    %label.col-sm-2.control-label{ for: 'user_password_confirmation' }
      パスワード（確認用）
    .col-sm-4
      = f.password_field :password_confirmation, class: 'form-control'

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "新規登録", class: 'btn btn-primary'
      = link_to "ログイン", new_session_path(resource_name)
