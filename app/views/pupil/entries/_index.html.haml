%table.table.table-striped
  - current_user.pupil_entries_by_master(master).each do |entry|
    %tr
      %td= entry.user.name
      %td= entry.description
      %td
        - if current_user == entry.user
          = link_to '削除', pupil_entry_path(entry), :method => :delete, :data => { :confirm => '削除してよろしいですか？' }

%br

= link_to '新規書き込み', new_pupil_entry_path(params: {master_id: master.id})
