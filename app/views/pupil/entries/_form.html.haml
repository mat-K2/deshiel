= form_for @entry, url: pupil_entries_path do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
    = f.hidden_field :master_id, value: params[:master_id].to_i
    = f.hidden_field :pupil_id, value: current_user.id
  .actions
    = f.submit 'Save'
