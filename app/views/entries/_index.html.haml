- view_order = view_order || 0

%table.table.table-striped
  - entries.each do |entry|
    %tr
      %td.col-md-2
        = link_to entry.user.name, user_path(entry.user), target: '_blank'
      %td.col-md-9
        = simple_format(entry.description)
      %td.col-md-1
        - if current_user == entry.user && entries.last == entry
          = link_to '削除', entry_path(entry, params: {role: @role, view_order: view_order}), :method => :delete, :data => { :confirm => '削除してよろしいですか？' }
