- view_order = view_order || 0

%table.table.table-striped
  - entries.each do |entry|
    %tr
      %td= entry.user.name
      %td= entry.description
      %td
        - if current_user == entry.user
          = link_to '削除', entry_path(entry, params: {role: @role, view_order: view_order}), :method => :delete, :data => { :confirm => '削除してよろしいですか？' }
